# OMNISIGHT Environment Configuration Example
# Copy this file to .env and customize for your setup

# Camera Connection Settings
CAMERA_IP=192.168.1.100
CAMERA_USER=root
CAMERA_PASS=pass

# Development Mode
OMNISIGHT_ENV=development
DEBUG=1
LOG_LEVEL=debug

# Model Configuration
MODEL_QUANTIZATION=int8
INFERENCE_THREADS=4
PERCEPTION_MODEL=efficientnet-b4
TIMELINE_MODEL=transformer-800m

# Performance Tuning
MAX_FPS=10
MAX_CONCURRENT_TRACKS=50
PREDICTION_HORIZON_SECONDS=300

# Swarm Intelligence
MQTT_BROKER=mosquitto
MQTT_PORT=1883
SWARM_ENABLED=true
THREAT_SHARING_ENABLED=true

# Natural Language Processing
NLP_ENABLED=false
NLP_MODEL=llama-3b-int4
NLP_CONTEXT_WINDOW=7

# Resource Limits
MAX_MEMORY_MB=512
MAX_CPU_PERCENT=30

# Feature Flags
TIMELINE_THREADING_ENABLED=false
AUTONOMOUS_LEARNING=false
